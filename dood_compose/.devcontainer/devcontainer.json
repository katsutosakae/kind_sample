{
  "name": "KindDevByDooD2",
  "dockerComposeFile": "./docker-compose.yml",
  "workspaceFolder": "/workspaces",
  "postCreateCommand": "sudo chown node:node /var/run/docker.sock; sudo chown node:node /workspaces; [ ! -d kind_sample ] && git clone https://github.com/katsutosakae/kind_sample;",
  "features": {
    // docker.sockのマウントと権限付与消して下記features使用でも可能
    // "ghcr.io/devcontainers/features/docker-outside-of-docker": {}
  },
  // docker操作にはカーネルの強い操作権限が必要（コンテナ自体はホストカーネルを使用するので、devContainerに権限が必要）
  "privileged": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "amazonwebservices.amazon-q-vscode",
        "VisualStudioExptTeam.vscodeintellicode",
        "christian-kohler.path-intellisense",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ]
    }
  }
}